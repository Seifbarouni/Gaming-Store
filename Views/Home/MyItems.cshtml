@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model List<GetAGame.Models.Item>

@if (Model.Count == 0)
{
    <h1>
        Hi @User.Identity.Name,you don't have any items.
    </h1>
    <a class="btn btn-primary" type="button" asp-action="Add" asp-controller="AddItem">
        Add new item
    </a>
}
else
{
    <div class="container mt-5">
        <div class="card-deck">

            @foreach (var item in Model)
            {
                <br />
                <div class="card" style="width: 25rem;">
                    <img class="img-fluid" src="@item.ImgURL" , style="height:200px;width:200px;align-self:center;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>

                        <p class="card-text">@(string.Join(" ",item.Details.Split(" ").Take(10))+ "...")</p>

                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                More
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Details" asp-action="Index"
        asp-route-Id="@item.Id">More Details</a>

                                <a class="dropdown-item" asp-controller="DeleteItem" asp-action="Delete"
        asp-route-Id="@item.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}