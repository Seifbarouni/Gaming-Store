@model GetAGame.Models.Item


<div class="text-center">
    <div class="card">
        <img src="@Model.ImgURL" style="height:300px;width:300px;align-self:center;">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">
                <ul class="list-group list-group-flush">
                    @{
                        var strings = @Model.Details.Split(".");
                        foreach (var item in strings)
                        {
                            <li class="list-group-item" style="text-align: left;">@item</li>
                        }
                    }

                </ul>

            </p>
            @if (User.Identity.Name != Model.OwnerName)
            {
                <a asp-controller="BuyItem" asp-action="Buy" class="btn btn-success" asp-route-Id="@Model.Id">Buy
                    @Model.Price$</a>
            }
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>